<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <!-- Allow the app to access network resources -->
  <key>com.apple.security.network.client</key>
  <true/>
  
  <!-- Allow outgoing network connections -->
  <key>com.apple.security.network.outgoing</key>
  <true/>
  
  <!-- Allow the app to read/write user-selected files -->
  <key>com.apple.security.files.user-selected.read-write</key>
  <true/>
  
  <!-- Allow the app to read/write downloads folder -->
  <key>com.apple.security.files.downloads.read-write</key>
  <true/>
  
  <!-- Allow execution of unsigned executable files (for yt-dlp) -->
  <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
  <true/>
  
  <!-- Allow loading of unsigned libraries -->
  <key>com.apple.security.cs.allow-dyld-environment-variables</key>
  <true/>
  
  <!-- Disable library validation (needed for yt-dlp binary) -->
  <key>com.apple.security.cs.disable-library-validation</key>
  <true/>
  
  <!-- Allow JIT compilation -->
  <key>com.apple.security.cs.allow-jit</key>
  <true/>
  
  <!-- Hardened runtime but with necessary exceptions -->
  <key>com.apple.security.cs.debugger</key>
  <true/>
</dict>
</plist> 